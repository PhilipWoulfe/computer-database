<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="hikariConfig" name="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
		<property name="poolName" value="springHikariCP" />
		<property name="dataSourceClassName" value="${dataSourceClassName}" />
		<property name="minimumIdle" value="${dataSource.minimumIdle}" />
		<property name="idleTimeout" value="${dataSource.idleTimeout}"/>
		<property name="maxLifetime" value="${dataSource.maxLifetime}"/>
		<property name="dataSourceProperties">
			<props>
				<prop key="url">${dataSource.jdbcurl}</prop>
				<prop key="user">${dataSource.user}</prop>
				<prop key="password">${dataSource.password}</prop>
			</props>
		</property>
	</bean>
	<bean id="dataSource" name="dataSource"
          class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
		<constructor-arg ref="hikariConfig" />
	</bean>
	
</beans>